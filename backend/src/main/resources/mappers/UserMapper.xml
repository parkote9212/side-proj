<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pgc.sideproj.mapper.UserMapper">
    <insert id="save" parameterType="com.pgc.sideproj.dto.db.UserDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (email, password, nickname, role)
        VALUES (#{email}, #{password}, #{nickname}, #{role})
    </insert>

    <select id="findByEmail" parameterType="string" resultType="com.pgc.sideproj.dto.db.UserDTO">
        SELECT
            id,
            email,
            password,
            nickname,
            role
        FROM user
        WHERE email = #{email}
    </select>

    <select id="findAll" resultType="com.pgc.sideproj.dto.db.UserDTO">
        SELECT
            id,
            email,
            nickname,
            role
        FROM user
        ORDER BY id ASC
    </select>
</mapper>